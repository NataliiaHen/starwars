{
  "name": "starwars",
  "version": "0.1.0",
  "description": "A project that shows Star Wars heroes",
  "keywords": [
    "star wars",
    "heroes",
    "wars"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
